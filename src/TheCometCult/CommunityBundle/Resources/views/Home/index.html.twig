{% extends "TheCometCultCommunityBundle::layout.html.twig" %}

{% set page_title = '' %}

{% block content %}
    <div class="new-member-form">
        <label for="member">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                {{ flashMessage }}
            {% endfor %}
        </label>
        {{ form(form) }}
    </div>
    <ul class="people">
        {% for member in members %}
            <li class="people__person">
                <article>
                    <figure class="image">
                        <img src="https://graph.facebook.com/{{ member.fbId|e('html_attr') }}/picture?width=120&amp;height=120"/>
                    </figure>
                    <div class="description">
                        <h3>{{ member.name }}, {{ member.age }}</h3>
                        <p class="job">{{ member.bio }}</p>
                        <p>{{ member.occupancy }}</p>
                        <p>From: {{ member.homeland }}</p>
                    </div>
                </article>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
