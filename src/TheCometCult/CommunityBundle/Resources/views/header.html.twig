</div>
<section class="form">
    <form name="form-signup" id="form-signup" action="/" method="POST" class="wrapper">
        <fieldset class="connect-facebook">
            <div class="not-authorized">
                <label>Step 1</label>
                <button class="button" type="button">
                    <span class="ss-facebook"></span>Connect with Facebook
                </button>
            </div>
            <div class="authorized" style="display: none;">
                <label>Step 1</label>
                <img src="" class="fb-avatar">
                <p class="fb-info"><span class="fb-name"></span>, <span class="fb-age"></span></p>
                <input type="hidden" name="fb-id" id="fb-id">
                <input type="hidden" name="fb-age" id="fb-age">
                <input type="hidden" name="fb-name" id="fb-name">
            </div>
        </fieldset>
        <fieldset class="bio">
            <label for="bio-text">Step 2</label>
            <textarea name="bio-text" id="bio-text" rows="5" placeholder="Write a brief bio, what do you do, where do you work, etc."></textarea>
            <span class="counter">140</span>
        </fieldset>
        <fieldset class="countries">
            <label for="country-from">Step 3</label>
            <input type="text" id="country-from" name="country-from" placeholder="Where are you from?">
            <input type="text" id="country-live" name="country-live" placeholder="Where do you or did you live abroad?">
        </fieldset>
        <fieldset class="add-to-list">
            <label>Step 4</label>
            <button class="button" disabled>
                <span class="ss-pika ss-icon">check</span>
                Add me to the list!
            </button>
        </fieldset>
    </form>
</section>
